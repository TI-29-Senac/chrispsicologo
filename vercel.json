{
    "builds": [
        {
            "src": "backend/*.php",
            "use": "vercel-php@0.7.1"
        },
        {
            "src": "*.{html,ico,txt}",
            "use": "@vercel/static"
        },
        {
            "src": "{css,js,img}/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/backend/test_db_connection.php",
            "dest": "/backend/test_db_connection.php"
        },
        {
            "src": "/backend/(.*)",
            "dest": "/backend/index.php"
        }
    ]
}