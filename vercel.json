{
    "builds": [
        {
            "src": "backend/index.php",
            "use": "vercel-php@0.7.1"
        },
        {
            "src": "*.{html,ico,txt}",
            "use": "@vercel/static"
        },
        {
            "src": "{css,js,img}/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/css/(.*)",
            "dest": "/css/$1"
        },
        {
            "src": "/js/(.*)",
            "dest": "/js/$1"
        },
        {
            "src": "/img/(.*)",
            "dest": "/img/$1"
        },
        {
            "src": "/backend/(.*)",
            "dest": "/backend/index.php"
        },
        {
            "src": "/(.*\\.html)",
            "dest": "/$1"
        },
        {
            "src": "/",
            "dest": "/index.html"
        }
    ]
}