RewriteEngine On

# Define o diretório base (mantenha como está no seu original)
RewriteBase /chrispsicologo/backend/

# --- CORREÇÃO: Força o envio do Header Authorization para o PHP ---
RewriteCond %{HTTP:Authorization} .
RewriteRule .* - [E=HTTP_AUTHORIZATION:%{HTTP:Authorization}]
# ------------------------------------------------------------------

# Se o pedido NÃO for um ficheiro real...
RewriteCond %{REQUEST_FILENAME} !-f
# E se o pedido NÃO for um diretório real...
RewriteCond %{REQUEST_FILENAME} !-d

# Redireciona o pedido para o index.php
RewriteRule . index.php [L]